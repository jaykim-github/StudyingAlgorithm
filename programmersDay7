//콜라츠 추측

class Solution {
    public int solution(int num1) {
        int answer = 0;
        long num = num1;
        
        while(num != 1){
        if (num%2 == 0){
            num = num/2;
            answer += 1;
        }else{
            num = (num*3)+1;
            answer +=1; 
        }
            if(answer ==500){
        	answer = -1;
                break;
            }
        }
        
        
        return answer;
    }
}
